{
  "name": "@codependence-monorepo/root",
  "version": "0.0.0",
  "description": "Codependence monorepo demo",
  "private": true,
  "main": "README.md",
  "scripts": {
    "build": "pnpm -r build",
    "cmd:update": "codependence-monorepo",
    "lint": "eslint --fix",
    "test": "vitest run",
    "update": "codependence --update"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "18.4.4",
    "@commitlint/config-conventional": "18.4.4",
    "@commitlint/config-lerna-scopes": "18.4.4",
    "@commitlint/prompt": "18.4.4",
    "@types/node": "20.11.5",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "@vitest/ui": "1.2.1",
    "commitizen": "^4.3.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "15.2.0",
    "rimraf": "5.0.5",
    "ts-node": "10.9.2",
    "tslib": "2.6.2",
    "tsup": "8.0.1",
    "tsutils": "^3.21.0",
    "typescript": "5.3.3",
    "vitest": "1.2.1"
  },
  "contributors": [
    {
      "name": "Jeff Wainwright"
    }
  ],
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "scope-enum": [
        2,
        "always",
        [
          "root",
          "cli",
          "example-cli",
          "package-a",
          "package-b",
          "package-c"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "refactor",
          "test",
          "release",
          "revert",
          "breaking",
          "major"
        ]
      ]
    }
  },
  "codependence": {
    "codependencies": [
      "codependence",
      "@commitlint/cli",
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes",
      "@commitlint/prompt",
      "@types/node",
      "@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser",
      "@vitest/ui",
      "commitizen",
      "eslint",
      "eslint-config-prettier",
      "husky",
      "is-ci",
      "lint-staged",
      "rimraf",
      "ts-node",
      "tslib",
      "tsup",
      "tsutils",
      "typescript",
      "vitest",
      "commander",
      "fast-glob",
      "fs-extra",
      "@types/fs-extra",
      "@types/node",
      "ts-node",
      "typescript",
      "lodash",
      "@types/lodash",
      "rambda"
    ]
  },
  "dependencies": {
    "codependence": "^0.2.6"
  }
}
