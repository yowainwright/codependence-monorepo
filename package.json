{
  "name": "@codependence-monorepo/root",
  "version": "0.0.0",
  "description": "Codependence monorepo demo",
  "private": true,
  "main": "README.md",
  "scripts": {
    "build": "pnpm -r build",
    "cmd:update": "codependence-monorepo",
    "lint": "eslint --fix",
    "test": "vitest run",
    "update": "codependence --update"
  },
  "license": "MIT",
  "devDependencies": {
    "@codependence-monorepo/cli": "workspace:0.0.0",
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@commitlint/config-lerna-scopes": "^17.4.0",
    "@commitlint/prompt": "^17.4.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@vitest/ui": "^0.15.2",
    "commitizen": "^4.2.6",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "tsup": "^6.5.0",
    "tsutils": "^3.21.0",
    "typescript": "^4.9.4",
    "vitest": "^0.15.2"
  },
  "contributors": [
    {
      "name": "Jeff Wainwright"
    }
  ],
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "scope-enum": [
        2,
        "always",
        [
          "root",
          "cli",
          "example-cli",
          "package-a",
          "package-b",
          "package-c"
        ]
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "refactor",
          "test",
          "release",
          "revert",
          "breaking",
          "major"
        ]
      ]
    }
  },
  "codependence": {
    "codependencies": [
      "codependence",
      "@codependence-monorepo/cli",
      "@commitlint/cli",
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes",
      "@commitlint/prompt",
      "@types/node",
      "@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser",
      "@vitest/ui",
      "commitizen",
      "eslint",
      "eslint-config-prettier",
      "husky",
      "is-ci",
      "lint-staged",
      "rimraf",
      "ts-node",
      "tslib",
      "tsup",
      "tsutils",
      "typescript",
      "vitest",
      "commander",
      "fast-glob",
      "fs-extra",
      "@types/fs-extra",
      "@types/node",
      "ts-node",
      "typescript",
      "lodash",
      "@types/lodash",
      "rambda"
    ]
  },
  "dependencies": {
    "codependence": "^0.2.6"
  }
}
